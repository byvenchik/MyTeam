<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="settingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="settingsNormalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/toolbar</item>
        <item name="android:textColorHint">@color/toolbar</item>
    </style>


    <style name="settingsSmallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textColor">@color/gray_custom</item>
    </style>


    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/smallText</item>
        <item name="android:textColor">@color/whiteDark</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/material_drawer_divider</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="mainToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/mainColor</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_margin">@dimen/app_margin</item>
        <item name="android:inputType">phone</item>
        <item name="android:textColorHint">@color/whiteDark</item>
    </style>


</resources>